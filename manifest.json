{
    "manifest_version": 2,
    "name": "Stack notifications",
    "version": "0.1",
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "permissions": [
        "storage",
        "notifications",
        "contextMenus",
        "identity",
        "https://api.stackexchange.com/*",
        "http://cdn.sstatic.net/*"
    ],
    "oauth2": {
        "client_id": "7951",
        "scopes": [
            "no_expiry",
            "read_inbox"
        ]
    },
    "icons": {
        "16": "icons/se16.png",
        "32": "icons/se32.png",
        "158": "icons/se158.png"
    },
    "offline_enabled": false
}