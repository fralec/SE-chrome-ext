{
    "manifest_version": 2,
    "name": "Stackoverflow notifications",
    "version": "0.1",
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "permissions": [
        "storage",
        "notifications",
        "contextMenus",
        "identity",
        "https://api.stackexchange.com/*"
    ],
    "oauth2": {
        "client_id": "7951",
        "scopes": [
            "no_expiry",
            "read_inbox"
        ]
    },
    "icons": {
        "16": "icon.png"
    },
    "offline_enabled": false
}